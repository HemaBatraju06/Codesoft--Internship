import re

def chatbot_response(user_input):
    user_input = user_input.lower()

    # Rule-based responses using if-else and pattern matching
    if re.search(r'\bhello\b|\bhi\b|\bhey\b', user_input):
        return "Hello! How can I help you today?"

    elif re.search(r'\bhow are you\b', user_input):
        return "I'm just a bot, but I'm doing great! Thanks for asking."

    elif re.search(r'\bwhat is your name\b', user_input):
        return "I'm a simple chatbot created to help you!"

    elif re.search(r'\bhelp\b', user_input):
        return "Sure! You can ask me about the weather, time, or just say hi."

    elif re.search(r'\bbye\b|\bexit\b|\bquit\b', user_input):
        return "Goodbye! Have a great day."

    else:
        return "I'm not sure I understand. Can you please rephrase?"

# Chat loop
print("Chatbot: Hello! Type 'bye' to end the chat.")
while True:
    user_input = input("You: ")
    response = chatbot_response(user_input)
    print("Chatbot:", response)
    if re.search(r'\bbye\b|\bexit\b|\bquit\b', user_input.lower()):
        break
